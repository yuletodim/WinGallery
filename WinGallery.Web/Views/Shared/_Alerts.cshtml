@using WinGallery.Web.Utils

@if (TempData.GetAlerts().Any())
{
    <script type="text/javascript">
        $(function () {
            toastr.options = {
                "closeButton": false,
                "debug": false,
                "newestOnTop": false,
                "progressBar": false,
                "positionClass": "toast-top-center",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }

            @foreach (var alert in TempData.GetAlerts())
            {
                <text>
                    var command = "@alert.Command";
                    var message = "@alert.Message.Replace("'", "\\'")";

                    toastr[command](message);
                </text>
            }
        });
    </script>
}
