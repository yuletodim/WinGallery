@using Microsoft.AspNet.Identity
@using WinGallery.Web.Resources

@{ 
    var currentAction = this.ViewContext.RouteData.Values["action"].ToString();
    var currentController = this.ViewContext.RouteData.Values["controller"].ToString();
}

<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">
                <img src="~/Content/Images/Logo.png" alt="LogoPic" />
            </a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">Last Contests <span class="sr-only">(current)</span></a></li>
                <li><a href="#">Active Contests</a></li>
                @if (this.User.IsInRole(AppConstants.AdminRole) || this.User.IsInRole(AppConstants.ModeratorRole))
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Management <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            @if (this.User.IsInRole(AppConstants.AdminRole))
                            {
                                <li class="divider"></li>
                                <li><a href="/Users">All users admin</a></li>
                                <li class="divider"></li>
                                <li><a href="#">All contests admin</a></li>
                            }
                        </ul>
                    </li>
                }
            </ul>
            <form class="navbar-form navbar-left" role="search">
                <div class="form-group">
                    <input class="form-control" placeholder="Search" type="text">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>

            <div class="btn-group navbar-form">
                <a href="#" id ="language" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                    @Texts.Language
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" id="select-language">
                    <li>@Html.ActionLink(Texts.English, currentAction, currentController, routeValues: new { language = "en" }, htmlAttributes: null)</li>
                    <li>@Html.ActionLink(Texts.Bulgarian, currentAction, currentController, routeValues: new { language = "bg" }, htmlAttributes: null)</li>
                    <li>@Html.ActionLink(Texts.Spanish, currentAction, currentController, routeValues: new { language = "es" }, htmlAttributes: null)</li>
                    <li>@Html.ActionLink(Texts.Hebrew, currentAction, currentController, routeValues: new { language = "he" }, htmlAttributes: null)</li>
                </ul>
            </div>
            
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</nav>

